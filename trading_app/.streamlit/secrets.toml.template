# Streamlit Cloud Secrets Template
# DO NOT commit this file with real values!
# Copy this to Streamlit Cloud: Settings → Secrets

# ============================================================================
# REQUIRED: AI Assistant
# ============================================================================
ANTHROPIC_API_KEY = "sk-ant-api03-..."  # Get from: https://console.anthropic.com/

# ============================================================================
# REQUIRED: Live Data Feed (ProjectX API)
# ============================================================================
PROJECTX_USERNAME = "your_username"
PROJECTX_API_KEY = "your_api_key"
PROJECTX_BASE_URL = "https://api.topstepx.com"
PROJECTX_LIVE = "false"  # Set to "true" for live data, "false" for historical

# ============================================================================
# OPTIONAL: Historical Data Backfill (Databento)
# Only needed if you want to backfill data in cloud (not recommended - use ProjectX instead)
# ============================================================================
# DATABENTO_API_KEY = "db-..."  # Get from: https://databento.com/
# DATABENTO_DATASET = "GLBX.MDP3"
# DATABENTO_SCHEMA = "ohlcv-1m"
# DATABENTO_SYMBOLS = "MGC.FUT"

# ============================================================================
# ENVIRONMENT
# ============================================================================
TZ_LOCAL = "Australia/Brisbane"
SYMBOL = "MGC"
DUCKDB_PATH = "trading_app.db"  # Cloud uses local DB (will be empty initially)

# ============================================================================
# HOW TO ADD THESE TO STREAMLIT CLOUD:
# ============================================================================
# 1. Go to: https://share.streamlit.io/
# 2. Find your app
# 3. Click "⚙️ Settings"
# 4. Click "Secrets" tab
# 5. Copy the REQUIRED sections above (with your real keys)
# 6. Paste into the secrets editor
# 7. Click "Save"
# 8. App will auto-restart with secrets loaded
